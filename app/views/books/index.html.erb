<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="row">
  <div class="col-3">
    <%= render 'list',book: @book,user: @user  %>
  </div>
  <div class="col">
    <h1>Books</h1>
    <table class="table">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">Title</th>
          <th scope="col">Opinion</th>
        </tr>
        <tbody>
          <% @books.each do |books| %>
          <tr>
            <td><%= image_tag books.user.get_profile_image(100,100) %></td>
            <td><%= link_to books.title, book_path(books) %></td>
            <td><%= books.body %></td>
          </tr>
          <% end %>
        </tbody>
      </thead>
    </table>
    <p class="center">CopyRight Infratop.inc</p>
  </div>
</div>
<style>
  .center{
        margin:50px 0 0 50px;
    }
</style>