<P>Editing Book</P>
<%= form_with model: @book do |f| %>
    <div>
      <label>Title</label><br>
      <%= f.text_field :title %>
    </div>

    <div>
      <label>Body</label><br>
      <%= f.text_area :body %>
    </div>

    <%= f.submit 'Update Book' %>

    <p class="edit">
    <%= link_to "Show",book_path(@book.id) %>
    |
    <%= link_to "Back", "/books" %>
    </p>

  <% end %>