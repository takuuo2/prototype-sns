<!-- ユーザーの詳細 -->
<div>
  <h1>User info</h1>
  <%= image_tag user.get_profile_image(100,100) %>
  <h3>name <%= user.name %></h3>
  <h3>introduction <%= user.introduction %></h3>

  <% if user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(user) %></p>
  <% end %>
</div>

<h1>投稿フォーム</h1>
  <%= form_with model: book do |f| %>
    <h4>title</h4>
      <%= f.text_field :title %>
    <h4>opinion</h4>
      <%= f.text_area :opinion%>
    <%= f.submit '投稿' %>
  <% end %>

